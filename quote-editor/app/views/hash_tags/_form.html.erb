<%= simple_form_for [quote, hash_tag],
                    html: { class: "form hash-tag hash-tag--form" } do |f| %>

  <%= form_error_notification(hash_tag) %>

  <%= f.input :name,
              html5: true,
              input_html: { autofocus: true } %>

  <div class="hash_tag__actions">
    <%= link_to "Cancel", quote_path(quote), class: "btn btn--light" %>
    <%= f.submit class: "btn btn--secondary" %>
  </div>
<% end %>
