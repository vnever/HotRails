<%= turbo_frame_tag quote do %>
  <div class="quote">
    <div class="quote__header">
      <%= link_to quote.name,
                  quote_path(quote),
                  data: { turbo_frame: "_top" } %>
      <div class="quote__actions">
        <%= button_to "Delete",
                      quote_path(quote),
                      method: :delete,
                      class: "btn btn--light" %>
        <%= link_to "Edit",
                    edit_quote_path(quote),
                    class: "btn btn--light" %>
      </div>
    </div>
    <div class="quote__footer">
      <%= turbo_frame_tag "hash_tags" do %>
        <%= render quote.hash_tags, quote: quote %>
      <% end %>
      <%= link_to "New hashtag",
              new_quote_hash_tag_path(quote),
              data: { turbo_frame: dom_id(HashTag.new) },
              class: "btn btn--primary" %>
              
      <%= turbo_frame_tag HashTag.new %>
    </div>
  </div>
<% end %>
