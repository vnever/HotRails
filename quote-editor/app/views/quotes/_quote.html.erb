<%= turbo_frame_tag quote do %>
  <div class="quote">
    <div class="quote__header">
      <%= link_to quote.name,
                  quote_path(quote),
                  data: { turbo_frame: "_top" } %>
      <div class="quote__actions">
        <%= button_to "Delete",
                      quote_path(quote),
                      method: :delete,
                      class: "btn btn--light" %>
        <%= link_to "Edit",
                    edit_quote_path(quote),
                    class: "btn btn--light" %>
      </div>
    </div>
    <div class="quote__footer">
      <%= render quote.hash_tags, quote: quote %>
    </div>
  </div>
<% end %>
